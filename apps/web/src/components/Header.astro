---
import SvgIcon from './SvgIcon.svelte';
import ThemeToggle from './ThemeToggle.svelte';
import RainbowDivider from './RainbowDivider.astro';
const { title = 'Supacolors', subtitle = '.ml', currentPage } = Astro.props;
---

<h1
  class="text-3xl leading-[1.75] md:text-[2rem] md:!leading-[1.5] lg:text-4xl lg:!leading-[1.4] xl:text-[2.5rem] xl:leading-[1.33] font-bold font-[Gilroy] tracking-tight place-items-center content-center self-center items-center align-center mb-2 pb-2 px-4 flex justify-between"
>
  <a href="/" class="flex lowercase">
    <SvgIcon id="supabase" class="relative top-1 mr-2 text-brand-900" width="48" height="48" />
    <span>{title}<span class="font-light">{subtitle}</span></span>
  </a>
  <div class="flex gap-x-4 -mt-px">
    <a
      href="https://github.com/nberlette/supacolors"
      target="_blank"
      rel="external noopener noreferer"
      title="Supacolors on GitHub"
      class="mr-2"
    >
      <SvgIcon
        id="github"
        width="24"
        height="24"
        class="relative top-1 transition-all duration-300 ease-in hover:text-grass-A1000"
      />
    </a>
    <ThemeToggle />
  </div>
</h1>

<RainbowDivider height="8" />

{
  "name": "supacolors-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Nicholas Berlette <nick@berlette.com>",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.0.0",
  "publishConfig": {
    "access": "restricted"
  },
  "homepage": "https://supacolors.ml",
  "repository": "nberlette/supacolors",
  "readme": "https://github.com/nberlette/supacolors#readme",
  "bugs": "https://github.com/nberlette/supacolors/issues",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean --no-cache && rm -rf node_modules",
    "format:base": "prettier \"{packages,apps}/**/*.{js,jsx,ts,tsx,astro,svelte,vue,md,mdx}\"",
    "format:check": "nr format:base -c",
    "format": "nr format:base -w",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "prettier": "@brlt/prettier",
  "devDependencies": {
    "@brlt/prettier": "^1.6.4",
    "@changesets/cli": "^2.22.0",
    "astro": "latest",
    "fsxx": "^0.0.5",
    "prettier": "latest",
    "prettier-plugin-astro": "^0.0.12",
    "prettier-plugin-svelte": "^2.7.0",
    "svelte": "latest",
    "turbo": "latest",
    "vite": "latest",
    "zx": "4.3.0"
  }
}
